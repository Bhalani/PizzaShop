<div class="nested-fields mb-4">
  <div class="field mb-4">
    <%= side_form.label :inventory_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= side_form.collection_select :inventory_id, @sides, :id, :name, {}, class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline w-40 md:w-60" %>
  </div>
  <div class="field mb-4">
    <%= side_form.label :quantity, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= side_form.number_field :quantity, class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline w-40 md:w-60" %>
  </div>
  <%= side_form.hidden_field :_destroy %>
  <%= button_tag 'Remove Side', type: 'button', data: { action: 'nested-form#remove' }, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' %>
</div>
